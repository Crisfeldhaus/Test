<%- include ('../../partials/header.ejs') %>
    <section class="banner banner-secondary" id="top" style="background-image: url(../../img/banner-image-1-1920x300.jpg);">
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div class="banner-caption">
                        <div class="line-dec"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
<div class = "container">
    <h2>Termine</h2>
    <a class= "btn btn-success" href="/admin/termin/new-termin"> Neu Termin Hinzufügen</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titel</th>
                <th>Slug</th>
                <th>Datum</th>
                <th>Uhrzeit</th>
                <th>Ort</th>
                <th>Studie</th>
                <th>Aktionen</th>
            </tr>          
        </thead>
        <tbody>
           <% termines.forEach(termines =>{ %>
             <tr>
                <td><%= termines.termin_id %></td>
                <td><%= termines.titel %></td>
                <td><%= termines.slug %></td>
                <td><%= termines.datum%></td>
                <td><%= termines.uhrzeit %></td>
                <td><%= termines.ort %></td>
                <td><%= termines.study.titel %></td>
                <td>
                    <a href="/admin/termine/edit/<%= termines.termin_id %>" class = "btn btn-warning"> Bearbeiten</a>
                    <form method ="post" action= "/termine/delete" style ="display: inline " onsubmit="confirmDelete(event,this)">
                        <input type= "hidden" name="termin_id" value= "<%= termines.termin_id%>">
                        <button class="btn btn-danger">Löschen</button>
                    </form>
                </td>
             </tr>
           <% }) %>
        </tbody>
    </table>
</div>
<%- include ('../../partials/footer.ejs') %>     
<script>
    function confirmDelete(event, form){
        event.preventDefault();
        var decision = confirm("Möchten Sie diesen Termin löschen?")
        if(decision){
            form.submit();
        }else{

        }
    }
</script>